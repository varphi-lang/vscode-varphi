{
  "name": "varphi",
  "displayName": "Varphi",
  "description": "Official Varphi Extension for Visual Studio Code",
  "version": "2.0.0",
  "icon": "assets/varphi_icon.png",
  "publisher": "varphi-lang",
  "repository": {
    "type": "git",
    "url": "https://github.com/varphi-lang/vscode-varphi"
  },
  "license": "SEE LICENSE IN LICENSE",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Debuggers"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "contributes": {
    "grammars": [
      {
        "language": "varphi",
        "scopeName": "source.varphi",
        "path": "./syntaxes/varphi.tmLanguage.json"
      }
    ],
    "breakpoints": [
      {
        "language": "varphi"
      }
    ],
    "languages": [
      {
        "id": "varphi",
        "aliases": [
          "Varphi",
          "varphi"
        ],
        "extensions": [
          ".vp"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "assets/varphi_icon.png",
          "dark": "assets/varphi_icon.png"
        }
      }
    ],
    "debuggers": [
      {
        "type": "varphi",
        "label": "Varphi",
        "program": "",
        "configurationAttributes": {
          "launch": {
            "required": [ "sourcePath" ],
            "properties": {
              "sourcePath": {
                "type": "string",
                "description": "The path of the program to debug.",
                "default": "${file}"
              },
              "tapes": {
                "type": "array",
                "description": "List of initial tape contents.",
                "default": [],
                "items": {
                    "type": "string"
                }
              }
            }
          }
        }
      }
    ],
    "configuration": {
      "title": "Varphi",
      "properties": {
        "varphi.interpreterPath": {
          "type": "string",
          "description": "Path to the Varphi Interpreter (vpi). Must not include spaces.",
          "default": "varphi"
        }
      }
    },
    "commands": [
      {
        "command": "varphi.run",
        "title": "Run Program",
        "icon": "$(run)"
      },
      {
        "command": "varphi.debug",
        "title": "Debug Program",
        "icon": "$(debug-alt)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "varphi.run",
          "when": "editorLangId == varphi",
          "group": "navigation"
        },
        {
          "command": "varphi.debug",
          "when": "editorLangId == varphi",
          "group": "navigation"
        }
      ]
    }
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^18.x",
    "@types/vscode": "^1.75.0",
    "typescript": "^5.x"
  }
}